{
    "name": "contentful-translator",
    "version": "1.0.0",
    "description": "Automated content translation for locales for Contentful using DeepL.",
    "main": "dist/translate-content.mjs",
    "type": "module",
    "bin": {
        "contentful-translate": "dist/bin/translate.mjs"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "translate": "node src/translate-content.mjs",
        "build": "rimraf dist && rollup -c",
        "prepare": "npm run build",
        "pretest": "npm run build",
        "test": "node --test test/*.test.js",
        "test:watch": "node --test --watch test/*.test.js"
    },
    "keywords": [
        "contentful",
        "deepl",
        "translation",
        "i18n",
        "localization"
    ],
    "author": "Antler Digital",
    "license": "MIT",
    "dependencies": {
        "@contentful/rich-text-types": "^16.3.0",
        "chalk": "^5.3.0",
        "contentful-management": "^11.5.3",
        "deepl-node": "^1.11.0",
        "dotenv": "^16.3.1",
        "inquirer": "^9.2.12"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@rollup/plugin-terser": "^0.4.4",
        "rimraf": "^5.0.5",
        "rollup": "^4.0.0"
    },
    "engines": {
        "node": ">=18"
    },
    "publishConfig": {
        "access": "public"
    }
}
